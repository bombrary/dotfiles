# config directory for vim
XDG_CONFIG_HOME=".config/:$XDG_CONFIG_HOME"

# VcXsrv display setting for WSL2
# LOCAL_IP=$(cat /etc/resolv.conf | grep nameserver | awk '{print $2}')
# export DISPLAY=$LOCAL_IP:0

# VcXsrv display setting for WSL1
export DISPLAY=127.0.0.1:0
	
# SmatraPDF setting
export PATH="mnt/c/Program Files/SumatraPDF:$PATH"
alias sumatra='sumatraPDF.exe'

# Japanese setting
export LANG=ja_JP.UTF-8

# pyenv setting
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
if command -v pyenv 1>/dev/null 2>&1; then
  eval "$(pyenv init -)"
fi
# eval "$(pyenv virtualenv-init -)"

# prompt display setting
export PS1="\[\e]0;\u@\h: \w\a\]${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\W\[\033[00m\] \$ "

# ls setting
eval $(dircolors -b ~/.colorrc)

# chrome
alias chrome='/mnt/c/Program\ Files\ \(x86\)/Google/Chrome/Application/chrome.exe'
eval $(/home/linuxbrew/.linuxbrew/bin/brew shellenv)

# .local/bin
export PATH="/home/bombrary/.local/bin:$PATH"

# setting of editor
export EDITOR="vim -c \"set fenc=utf-8\""

# mv
alias mv='mv -i'
alias cp='cp -i'

# rust setting
export PATH="$HOME/.cargo/bin:$PATH"
